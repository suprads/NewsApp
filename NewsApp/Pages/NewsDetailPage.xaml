<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApp.Pages.NewsDetailPage"
             Title="NewsDetailPage">
    <VerticalStackLayout>
        <Image x:Name="LblImage" Source="{Binding Image}"/>
        <Label x:Name="LblArticleTitle" Text="{Binding Title}" FontSize="Title" FontAttributes="Bold" HorizontalOptions="Center" Margin="10"/>
        <Label x:Name="LblDetails" Text="{Binding Content}" FontSize="Medium" Margin="100"/>
    </VerticalStackLayout>
</ContentPage>